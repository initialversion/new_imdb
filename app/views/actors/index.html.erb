<div class="page-header">
  <h1>
    Actors
    <a href="/actors/new" class="btn btn-lg btn-success">New Actor</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "actors_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
      <%= f.label :dob_gteq, "Dob greater than or equal to" %>
      <div class='input-group date' id='dobgteqPicker'>
        <%= f.text_field :dob_gteq, :class => "form-control", :placeholder => "Dob greater than or equal to" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
        <script type="text/javascript">
          $(function () {
              $('#dobgteqPicker').datetimepicker({
                format: 'YYYY-MM-DD HH:MM:SS'
              });
          });
        </script>
      </div>
    </div>

<div class="form-group">
      <%= f.label :dob_lteq, "Dob less than or equal to" %>
      <div class='input-group date' id='doblteqPicker'>
        <%= f.text_field :dob_lteq, :class => "form-control", :placeholder => "Dob less than or equal to" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
        <script type="text/javascript">
          $(function () {
              $('#doblteqPicker').datetimepicker({
                format: 'YYYY-MM-DD HH:MM:SS'
              });
          });
        </script>
      </div>
    </div>

<div class="form-group">
    <%= f.label :bio_cont, "Bio contains" %>
    <%= f.text_field :bio_cont, :class => "form-control", :placeholder => "Bio contains" %>
  </div>

<div class="form-group">
    <%= f.label :stunt_actor_eq, "Stunt actor" %>
    <div>
      <%= f.radio_button :stunt_actor_eq, "1", checked: ((params[:q] && params[:q][:stunt_actor_eq]) == "1" ? "checked" : "") %> Yes
      <%= f.radio_button :stunt_actor_eq, "0", checked: ((params[:q] && params[:q][:stunt_actor_eq]) == "0" ? "checked" : "")%> No
      <%= f.radio_button :stunt_actor_eq, ""%> Either
    </div>
  </div>

<div class="form-group">
      <%= f.label :created_at_gteq, "Created at greater than or equal to" %>
      <div class='input-group date' id='created_atgteqPicker'>
        <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
        <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                format: 'YYYY-MM-DD HH:MM:SS'
              });
          });
        </script>
      </div>
    </div>

<div class="form-group">
      <%= f.label :created_at_lteq, "Created at less than or equal to" %>
      <div class='input-group date' id='created_atlteqPicker'>
        <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
        <script type="text/javascript">
          $(function () {
              $('#created_atlteqPicker').datetimepicker({
                format: 'YYYY-MM-DD HH:MM:SS'
              });
          });
        </script>
      </div>
    </div>

        <div class="form-group">
      <%= f.label :characters_character_name_cont, "Casting character_name contains" %>
      <%= f.text_field :characters_character_name_cont, :class => "form-control", :placeholder => "Casting character_name contains" %>
    </div>

<div class="form-group">
      <%= f.label :movies_title_cont, "Movie title contains" %>
      <%= f.text_field :movies_title_cont, :class => "form-control", :placeholder => "Movie title contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block" %>

      <a href="/actors" class="btn btn-default btn-block">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#actors_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Bio</th>
        <th>Image</th>
        <th>Dob</th>
        <th>Stunt actor</th>
        <th>Actions</th>
      </tr>

      <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.bio %></td>
        <td><img src='<%= actor.image %>' class='img-responsive'></td>
        <td><%= actor.dob %></td>
        <td><%= actor.stunt_actor %></td>
        <td>
          <a href="/actors/<%= actor.id %>" class="btn btn-primary">Show</a>
          <a href="/actors/<%= actor.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_actor/<%= actor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @actors, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
